%{ for server in servers ~}
%{ if contains(server.flags, "docker") ~}
- ${server.host}:
  - SpeedTest (External):
    - href: https://speedtest.${server.fqdn_external}
    - icon: sh-openspeedtest
  - SpeedTest (Internal):
    - href: https://speedtest.${server.fqdn_internal}
    - icon: sh-openspeedtest
%{ endif ~}
%{ for service in services ~}
%{ if server.host == service.server && service.enable_homepage_widget == false && service.fqdn != null ~}
  - ${service.description}:
    - href: ${service.url}
    - icon: sh-${service.icon}
%{ endif ~}
%{ endfor ~}
%{ endfor ~}
- Cloud:
%{ for service in services ~}
%{ if ! service.enable_homepage_widget && service.fqdn != null && service.server == null ~}
  - ${service.description}:
    - href: ${service.url}
    - icon: sh-${service.icon}
%{ endif ~}
%{ endfor ~}
