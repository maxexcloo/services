networks:
  default:
    external: true
    name: docker
services:
  service:
    environment:
      LOKI_LIMITS_CONFIG_RETENTION_PERIOD: 744h
    image: grafana/loki
    labels:
      caddy: ${service.fqdn}
      caddy.import: ${service.zone}
      caddy.reverse_proxy: "{{upstreams 3100}}"
    restart: unless-stopped
    volumes:
      - data:/loki
volumes:
  data:
